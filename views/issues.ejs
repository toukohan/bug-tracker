<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Issues</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


    <!-- Custom styles for this template -->
    <link href="/css/dashboard.css" type="text/css" rel="stylesheet">
</head>

<body>

    <%- include("./partials/header") %>

        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="position-sticky pt-3 sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/dashboard">
                                    Dashboard
                                </a>
                            </li>
                            <% if(user.role=="admin" ) { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/users">
                                        Users
                                    </a>
                                </li>
                                <% } %>
                                    <% if(user.role=="admin" || user.role=="manager" ) { %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/departments">
                                                Departments
                                            </a>
                                        </li>
                                        <% } %>

                                            <li class="nav-item">
                                                <a class="nav-link active" href="/issues">
                                                    Issues
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="/create">
                                                    Create an Issue
                                                </a>
                                            </li>
                        </ul>


                    </div>
                </nav>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div
                        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1>Issues</h1>
                        <h3>logged in as <%= user.name %>
                        </h3>
                        <div class="btn-toolbar mb-2 mb-md-0">


                            <form action="/dashboard/sort" method="post">
                                <label for="sort">Sort issues by:</label>
                                <button type="submit" value="new">new</button>
                                <button type="submit" value="priority">priority</button>

                            </form>
                        </div>
                    </div>

                    <ul>
                        <% departments.forEach(dep=> { %>
                            <a href="#<%= dep%>">
                                <%= dep %>
                            </a>
                            <% }) %>
                    </ul>
                    <div class="issues">
                        <% issues.forEach(issue=> { %>
                            <div class="issue">
                                <h3 class="issue-title severity<%= issue.severity %>">
                                    <a href="/issues/<%= issue._id %>">
                                        <%= issue.title %>
                                    </a>
                                </h3>
                                <p class="issue-department">
                                    <%= issue.department %> | Open: <%= issue.open %>
                                </p>
                                <p class="issue-date">
                                    <%= issue.date.toString().substring(0, 21) %>
                                </p>
                                <p class="issue-content">
                                    <%= issue.content %>
                                </p>
                            </div>
                            <% }) %>
                    </div>



                </main>
            </div>
        </div>


</body>

</html>