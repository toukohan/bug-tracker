<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Issues</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


    <!-- Custom styles for this template -->
    <link href="/css/dashboard.css" type="text/css" rel="stylesheet">
</head>

<body>

    <%- include("./partials/header") %>

       <!-- sidebar links -->
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/dashboard">
                                    Dashboard
                                </a>
                            </li>
                            <% if(user.role=="admin" || user.role=="manager" ) { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/users">
                                        Users
                                    </a>
                                </li>
                                <% } %>
                                    <% if(user.role=="admin" || user.role=="manager" || user.role=="developer" ) { %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/departments">
                                                Departments
                                            </a>
                                        </li>
                                        <% } %>
                                            <% if(user.role=="admin" || user.role=="manager" || user.role=="developer" )
                                                { %>
                                                <li class="nav-item">
                                                    <a class="nav-link active" href="/issues">
                                                        Issues
                                                    </a>
                                                </li>
                                                <% } %>
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="/create">
                                                            Create an Issue
                                                        </a>
                                                    </li>
                        </ul>

                        <%- include("./partials/logged-in") %>
                    </div>
                </nav>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div
                        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1>Issues</h1>

                        <div class="btn-toolbar mb-2 mb-md-0">


                            <form action="/issues" method="post">
                                <label for="sort">Sort issues by:</label>
                                <button class="btn btn-dark btn-sm" name="sortby" type="submit" value="new">new</button>
                                <button class="btn btn-dark btn-sm" name="sortby" type="submit"
                                    value="priority">priority</button>
                                <button class="btn btn-dark btn-sm" name="sortby" type="submit"
                                    value="unassigned">unassigned</button>
                                <button class="btn btn-dark btn-sm" name="sortby" type="submit"
                                    value="closed">closed</button>
                                <button class="btn btn-dark btn-sm" name="sortby" type="submit"
                                    value="help">help</button>

                            </form>
                        </div>
                    </div>
                    <!-- deparmtment links -->
                    <%- include("./partials/deps") %>

                    <%- include("./partials/view-issues") %>


                </main>
                <%- include("./partials/footer") %>
            </div>
        </div>


</body>

</html>