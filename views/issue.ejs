<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Issue: <%= issue.title %>
    </title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


    <!-- Custom styles for this template -->
    <link href="/css/dashboard.css" type="text/css" rel="stylesheet">
</head>

<body>

    <%- include("./partials/header") %>

        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="position-sticky pt-3 sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/dashboard">
                                    Dashboard
                                </a>
                            </li>
                            <% if(user.role=="admin" ) { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/users">
                                        Users
                                    </a>
                                </li>
                                <% } %>
                                    <% if(user.role=="admin" || user.role=="manager" ) { %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/departments">
                                                Departments
                                            </a>
                                        </li>
                                        <% } %>
                                            <li class="nav-item">
                                                <a class="nav-link active" href="/issues">
                                                    Issues
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="/create">
                                                    Create an Issue
                                                </a>
                                            </li>
                        </ul>


                    </div>
                </nav>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div
                        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">Issue</h1>
                        <h5>logged in as <%= user.name %>
                        </h5>
                        <div class="btn-toolbar mb-2 mb-md-0">
                        </div>
                    </div>

                    <div class="issues">
                        <div class="issue">
                            <h3 class="issue-title severity<%= issue.severity %>">
                                <%= issue.title %>
                            </h3>
                            <p class="issue-department">
                                <%= issue.department %> | Open: <%= issue.open %>
                                        <% if(user.role=="admin" || user.role=="manager" ) { %>
                                            <form action="/issues/close/<%= issue._id %>" method="post">
                                                <% if (issue.open) { %>
                                                    <button type="submit" value="close">Close</button>
                                                    <% } else { %>
                                                        <button type="submit" value="open">Open</button>
                                                        <% } %>
                                            </form>
                                            <% } %>
                            </p>

                            <p class="issue-date">
                                <%= issue.date.toString().substring(0, 21) %>
                            </p>
                            <p class="issue-content">
                                <%= issue.content %>
                            </p>
                            <% if(user.role=="admin" || user.role=="manager" ) { %>
                                <form action="/issues/assign/<%= issue._id %>" method="post">
                                    <label for="assign">Assign as task</label>
                                    <input type="text" id="assign" name="assign">
                                    <button type="submit">Assign</button>
                                </form>
                                <% } %>
                        </div>

                    </div>



                </main>
            </div>
        </div>


</body>

</html>