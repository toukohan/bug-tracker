<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Create a new issue</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


    <!-- Custom styles for this template -->
    <link href="/css/dashboard.css" type="text/css" rel="stylesheet">
</head>

<body>

    <%- include("./partials/header") %>

        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="position-sticky pt-3 sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/dashboard">
                                    Dashboard
                                </a>
                            </li>
                            <% if(user.role=="admin" ) { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/users">
                                        Users
                                    </a>
                                </li>
                                <% } %>
                                    <% if(user.role=="admin" || user.role=="manager" ) { %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/departments">
                                                Departments
                                            </a>
                                        </li>
                                        <% } %>
                                            <% if(user.role=="admin" || user.role=="manager" || user.role=="developer" )
                                                { %>
                                                <li class="nav-item">
                                                    <a class="nav-link" href="/issues">
                                                        Issues
                                                    </a>
                                                </li>
                                                <% } %>
                                                    <li class="nav-item">
                                                        <a class="nav-link active" href="/create">
                                                            Create an Issue
                                                        </a>
                                                    </li>
                        </ul>


                    </div>
                </nav>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div
                        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">Create an Issue</h1>
                        <h3>logged in as <%= user.name %>
                        </h3>
                        <div class="btn-toolbar mb-2 mb-md-0">



                            </form>
                        </div>
                    </div>

                    <div class="issue-form">
                        <h1>Create a new issue</h1>
                        <form action="/create" method="post">
                            <label for="title">Issue name:</label>
                            <br>
                            <input type="text" name="title" id="title">
                            <br>
                            <label for="department">Choose department:</label>
                            <br>
                            <select type="text" name="department" id="department">
                                <option value="Development">Development</option>
                                <option value="Support">Support</option>
                                <option value="Engineering">Engineering</option>
                                <option value="Sales">Sales</option>
                                <option value="Marketing">Marketing</option>
                                <option value="undefined">Other</option>
                            </select>
                            <select name="severity" id="severity">
                                <option value="0">Non-issue</option>
                                <option value="1">Low</option>
                                <option value="2">Medium</option>
                                <option value="3">Critical</option>
                            </select>
                            <br>
                            <label for="content">Describe the issue:</label>
                            <br>
                            <textarea type="text" name="content" id="content" cols="80" rows="8"></textarea>
                            <br>
                            <button type="submit">Create</button>

                        </form>

                    </div>



                </main>
            </div>
        </div>

</body>

</html>