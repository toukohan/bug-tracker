<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Users</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


    <!-- Custom styles for this template -->
    <link href="/css/dashboard.css" type="text/css" rel="stylesheet">
</head>

<body>

    <%- include("./partials/header") %>

        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="position-sticky pt-3 sidebar-sticky sidebar-custom">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/dashboard">
                                    Dashboard
                                </a>
                            </li>
                            <% if(user.role=="admin" ) { %>
                                <li class="nav-item">
                                    <a class="nav-link active" href="/users">
                                        Users
                                    </a>
                                </li>
                                <% } %>
                                    <% if(user.role=="admin" || user.role=="manager" || user.role=="developer" ) { %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/departments">
                                                Departments
                                            </a>
                                        </li>
                                        <% } %>
                                            <% if(user.role=="admin" || user.role=="manager" || user.role=="developer" )
                                                { %>
                                                <li class="nav-item">
                                                    <a class="nav-link" href="/issues">
                                                        Issues
                                                    </a>
                                                </li>
                                                <% } %>
                                                    <li class="nav-item">
                                                        <a href="/team" class="nav-link active">Team</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="/create">
                                                            Create an Issue
                                                        </a>
                                                    </li>

                        </ul>

                        <div class="logged-in">
                            Logged in as <%= user.name %>
                        </div>
                    </div>
                </nav>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div
                        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">Teams</h1>

                        <div class="btn-toolbar mb-2 mb-md-0">
                        </div>
                    </div>
                    <nav>
                        <ul class="nav justify-content-center">
                            <% user.teams.forEach(team=> { %>
    
                                <li class="nav-item"><a class="nav-link" href="/teams/<%= team%>">
                                        <%= team %>
                                    </a>
                                </li>
    
                                <% }) %>
                        </ul>   
                    </nav>
                    
                    <div class="d-flex">
                        <div class="teams">
                           
                            <% teams.forEach(team => { %> 
                                <div class="team">
                                    <h3><%= team.name %></h3>
                                    <h4>Team members</h4>
                                    <ul>
                                       <% team.members.forEach(member => { %>
                                        <li><%= member.name %></li>
                                        <% }) %>
                                    </ul>
                                </div>
                            <% }) %>
                           
                        </div>
                        <div class="create-teams-members">
                        <div class="create-team">
                            <h2>Create a new team</h2>
                            <form action="/teams/create" method="post">
                                <label for="name">Name:</label>
                                <input class="form-control" type="text" name="name" id="name">
                                <button class="btn btn-dark" type="submit">Create</button>
                            </form>
                        </div>
                    
                        <div class="new-member">
                            <form action="/teams/add-member" method="post">
                                <select name="team" id="team">
                                    <% user.teams.forEach(team => { %>
                                        <option value="<%= team %>"><%= team %></option>
                                    <% }) %>
                                </select>
                                <input type="email" name="email" id="email">
                                <select name="role" id="role">
                                    <option value="developer">developer</option>
                                    <option value="manager">manager</option>
                                    <option value="admin">admin</option>
                                    <option value="client">client</option>
                                </select>
                                <button type="submit">Add member</button>
                            </form>
                        </div>
                        </div>
                    </div>

                </main>
            </div>
        </div>


</body>

</html>